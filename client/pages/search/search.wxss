/* 搜索框样式 */
.search
{
  width:90%;
  justify-content:'flex-start';
}
.search_arr {
  border: 1px solid #d0d0d0;
  background: #F2F2F2;
  border-radius: 999px;
  margin: 20rpx;
  margin-bottom: 0px;
}
.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:25rpx;
  top: 13px;
  z-index: 2;
  width: 15px;
  height: 15px;
  text-align: center;
}
.search_arr input{
  margin-left: 60rpx;
  border-radius: 999px;
  height: 60rpx;
  background: #F2F2F2;
}
/* 搜索框提示文字样式 */
.search input{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:35rpx; 
}