/**index.wxss**/
@import "../search/search.wxss";
page {
    background: #FFFFFF;
    display: flex;
    flex-direction: column;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: left;
  /** background-color: #b3d4db; **/
 }
.banner {
  height: 300rpx;
  margin:10px;
}
.banner image {
  height: 100%;
  width: 100%;
}

.tab-h{
    height: 85rpx; box-sizing: border-box;overflow: hidden;line-height: 35px;background: #FFFFFF;
    font-size: 16px; white-space: nowrap; z-index: 99;margin-left:10px;margin-right: 10px;}
.tab-h-fix{
    position: fixed;
    top: 0rpx;
    z-index:99;
}
.tab-item{padding: 0 15px;margin-right: 10px;border-radius: 5px; color: #AAAAAA;background-color: #F2F2F2; display: inline-block;}
.tab-item.active{color: #FFFFFF; background-color:#18C3AA;}/** border: solid 8px #18C3AA; border-radius: 25px;*/
.tab-item.active::after{content: '';background: url(../../images/icon_home_line.png);display: block;position: absolute;left: 40%;top:100%;width: 27px;z-index: 99999}

.uploader-text, .tunnel-text {
    width: 100%;
    line-height: 52px;
    font-size: 34rpx;
    color: #007AFF;
}

.uploader-container {
    width: 100%;
    height: 400rpx;
    padding: 20rpx 20rpx 20rpx 0;
    display: flex;
    align-content: center;
    justify-content: center;
    box-sizing: border-box;
    border-top: 1px solid rgba(0, 0, 0, .1);
}

.tunnel-text {
    position: relative;
    color: #222;
    display: flex;
    flex-direction: row;
    align-content: center;
    justify-content: space-between;
    box-sizing: border-box;
    border-top: 1px solid rgba(0, 0, 0, .1);
}

.tunnel-text:first-child {
    border-top: none;
}

.tab-content{display:flex;flex-direction:column;background:#FFF;border-bottom:.5px solid rgb(242, 242, 242);font:300 15px/1.4 PingFang SC, Helvetica Neue, Helvetica, Microsoft YaHei, Arial, sans-serif;height: 110px;}
.tab-item-top{display:flex;flex-direction:row;padding-left: 13px;padding-top:8px;}
.tab-item-img{justify-content:left;}
.tab-item-text{display:flex;padding-left:13px;flex-direction:column;justify-content:start;}
.tab-item-bottom{display:flex;flex-direction:row;padding-left: 13px;margin-top:4px;font-size:14px;color: #888}